<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>

    <PackageId>NuGet.UpdateTool</PackageId>    
    <Title>Update NuGet packages</Title>
    <Version>1.0.0</Version>
    <Authors>Constantine Colotiline</Authors>
    <PackageDescription>
      Update .NET Core NuGet packages to the latest version.
    </PackageDescription>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>
      https://github.com/colotiline/nuget-update-tool
    </RepositoryUrl>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>nuget-update</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>

    <ProjectGuid>{b883a7ef-57c8-4c5c-9653-a2065bf9a0e7}</ProjectGuid>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="3.0.0" />
    <PackageReference Include="Serilog" Version="2.9.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
  </ItemGroup>

</Project>
